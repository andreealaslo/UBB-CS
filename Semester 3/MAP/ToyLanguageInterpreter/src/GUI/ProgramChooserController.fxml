<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ProgramChooserController">
    <children>
        <VBox alignment="CENTER" prefHeight="328.0" prefWidth="541.0" style="-fx-background-color: #8B008B;">
            <children>
            <TextField alignment="TOP_CENTER" style="-fx-border-color: #8B008B; -fx-border-radius: 15; -fx-background-radius: 15; -fx-background-color: #D8BFD8;" text="Welcome to our Toy Language Interpreter!!">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font name="Bookman Old Style Bold" size="15.0" />
               </font>
            </TextField>
                <ListView fx:id="programsListView" prefHeight="226.0" prefWidth="516.0" style="-fx-background-color: #CCFBFE; -fx-background-radius: 5px;">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin></ListView>
                <Button fx:id="displayButton" alignment="BASELINE_CENTER" maxHeight="-Infinity" minHeight="-Infinity" mnemonicParsing="false" onAction="#displayProgram" prefHeight="24.0" style="-fx-background-color: #D8BFD8;" text="CHOOSE ONE PROGRAM AND LET'S RUN IT :D" textAlignment="CENTER" textFill="#30131b">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</StackPane>
